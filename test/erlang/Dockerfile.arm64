#--------------------------------------
# Image: base
#--------------------------------------
ARG BASE_IMAGE=containerbase/base

FROM ${BASE_IMAGE} as base

RUN touch /.dummy

ARG APT_HTTP_PROXY
ARG CONTAINERBASE_DEBUG
ARG GITHUB_TOKEN

RUN uname -p | tee | grep aarch64

#--------------------------------------
# Image: erlang
#--------------------------------------
FROM base as test-erlang

# renovate: datasource=github-releases packageName=containerbase/erlang-prebuild versioning=docker
RUN install-tool erlang 26.2.1.0

#--------------------------------------
# Image: elixir
#--------------------------------------
FROM test-erlang as test-elixir

# renovate: datasource=docker versioning=docker
RUN install-tool elixir 1.16.0

#--------------------------------------
# Image: final
#--------------------------------------
FROM base

COPY --from=test-erlang /.dummy /.dummy
COPY --from=test-elixir /.dummy /.dummy
